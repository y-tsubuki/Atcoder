import math
import itertools
 
N=int(input())
P=[]
all_dist=[]
def Len(X,Y):
    return math.sqrt((X[0]-Y[0])**2+(X[1]-Y[1])**2)
    
for _ in range(N):
    a,b=map(int,input().split())
    P.append([a,b])
 
route=list(itertools.permutations(P))
 
for k in range(math.factorial(N)):
    B=0
    A=list(route[k])
    for i in range(len(A)-1):
        B+=Len(A[i],A[i+1])
    all_dist.append(B)
ans=sum(all_dist)/len(all_dist)
 
print(str(ans))